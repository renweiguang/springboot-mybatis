    <insert id="insertReturnPrimaryKey" useGeneratedKeys="true" keyProperty="id"
            parameterType="com.rwg.entity.User">
        INSERT INTO user(name, pwd)
        values (#{name}, #{pwd})
    </insert>

    <insert id="insertUser" parameterType="com.rwg.entity.User">
        INSERT INTO user(name, pwd)
        values (#{name}, #{pwd})
    </insert>

</mapper>